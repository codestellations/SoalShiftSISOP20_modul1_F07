#Soal 3.a : script untuk mendownload 28 gambar dari alamat dengan command wget dan file "pdkt_kusuma_no"
#           log messages wget ke file "wget.log"

dup(){
 find /home/el/Downloads/kenangan -type f -exec md5sum {} + | sort | uniq -w32 -dD
 awk '{print $2}'
}

#dup

a=0
no=1

until [ $a -eq 10 ]
do
 name="pdkt_kusuma_$no"
 echo $name
  no=$((no + 1))
  a=$((a + 1))
  cat wget -O /home/el/Downloads/kenangan/$name "https://loremflickr.com/320/240/cat"> >> home/el/Downloads/wget.log
done




